  <%# <h5><%=@users.count results</h5>  %>
  <div id="users" class="row mt-3 g-3">
    <% @users.each do |user| %>
      <div class="col d-flex usercolumn align-items-center">
        <div>
          <% if user.avatar.key == nil %>
          <img src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662470428/tripplanner-avatar_vh1ooe.jpg"
            class="user-avatar mx-auto d-block" />
              <% else %>
              <%= cl_image_tag user.avatar.key, class: "user-avatar mx-auto d-block" %>
          <% end %>
        </div>

        <div class="width_100">
          <%= link_to user_path(user) do %>
            <h6><%= user.name %></h6>
          <%end%>

          <div class="width_100 d-flex justify-content-between">
            <div class="d-flex flex-column align-items-center">
              <i class="fa fa-suitcase mb-1"></i>
              <p><%=user.trips.count%></p>
            </div>
            <div class="d-flex flex-column align-items-center">
              <i class="fa fa-heart mb-1"></i>
              <p><%=rand(1 .. 50)%></p>
            </div>
            <div class="d-flex flex-column align-items-center">
              <i class="fa fa-comment mb-1"></i>
              <p><%=user.reviews.all.count%></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
