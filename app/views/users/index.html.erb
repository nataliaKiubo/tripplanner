<div class="container">
  <h1>All users</h1>
  <%# <h5><%=@users.count results</h5>  %>
  <div id="users" class="user-cards">
    <% @users.each do |user| %>
      <div class="card-envolve">
            <div class="mt-3 mb-3">
              <% if user.avatar.key == nil %>
              <img src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1661437338/001-user_vutg9d.png"
                class="user-avatar mx-auto d-block" />
                 <% else %>
                  <%= cl_image_tag user.avatar.key, class: "user-avatar mx-auto d-block" %>
              <% end %>
            </div>
            <div class="text-center mb-3">
            <%= link_to user_path(user) do %>
            <h6><%= user.name %></h6>
            <%end%>
            </div>

          <div class="counter-block m-t-10 p-20 center mb-2">
            <div class="width_100 d-flex justify-content-evenly">
                <div class="d-flex flex-column">
                <i class="fa fa-suitcase mb-1"></i>
                <p><%=user.trips.count%></p>
                </div>
                <div class="d-flex flex-column">
                <i class="fa fa-heart mb-1"></i>
                <p><%=rand(1 .. 50)%></p>
                </div>
                <div class="d-flex flex-column">
                <i class="fa fa-comment mb-1"></i>
                <p><%=user.reviews.all.count%></p>
                </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
