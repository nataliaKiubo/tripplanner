<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040472/Paris_hyevpy.jpg" alt="Paris">
      <p class="carousel-title">Dream Vacation in Paris</p>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040538/henrique-ferreira-6v-K4PpCHVw-unsplash_ookns1.jpg" alt="Zurich">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040576/charles-postiaux-Q6UehpkBSnQ-unsplash_svxgej.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
<h2>Explore cities</h2>
<p>Check out the most popular cities!</p>
  <div class="row explore-cities">
    <div class="col-4 cities">
      <%= image_tag src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040576/charles-postiaux-Q6UehpkBSnQ-unsplash_svxgej.jpg", alt: "London", class: "cities-image" %>
      <p class= "cities-title">London</p>
    </div>
    <div class="col-4 cities">
      <%= image_tag src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040538/henrique-ferreira-6v-K4PpCHVw-unsplash_ookns1.jpg", alt: "London", class: "cities-image" %>
      <p class= "cities-title">Zurich</p>
    </div>
    <div class="col-4 cities">
      <%= image_tag src="https://res.cloudinary.com/ddxqnyga2/image/upload/v1662040472/Paris_hyevpy.jpg", alt: "London", class: "cities-image" %>
      <p class= "cities-title">Paris</p>
    </div>
</div>
</div>

<div class="container">
<h2>Featured Guides from Users</h2>
<p>Check out what other travellers are doing:</p>
<% @trips.first(3).each do |trip| %>
<%# <%= cl_image_tag trip.main_image.key, crop: :fill, class: "card-image" %> %>
<h4><%= trip.name  %></h4>
<p><%= trip.user.name %></p>
<% end %>


</div>

<div class="container">
  <h2>Your Trips</h2>
  <%= link_to "Start planning", new_trip_path, class: "btn btn-primary"  %>
</div>
