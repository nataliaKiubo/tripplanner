<div class="container-sm mb-5">
  <h5 class='d-flex justify-content-start'>
        <strong>Itinerary</strong>
  </h5>

  <% @stops.each do |stop| %>
        <div class="card bg-light mb-3" style="max-width: 18rem;">
        <div class="card-header"><%= stop.date %></div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="fas fa-map-marker-alt"></i> <%= stop.address %></li>
            <li class="list-group-item"> <%= stop.description %></li>
            </ul>
          </div>
      </div>
  <% end %>



  <div style="width: 80%; height: 350px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <div>
      <%= link_to "Edit this trip", edit_trip_path(@trip) %> |
      <%= link_to "Back to trips", trips_path %>
      <%= link_to "Copy this trip",  copy_trip_path %>
      <%= button_to "Destroy this trip", @trip, method: :delete %>
        <% if @user.favorited?(@trip) %>
          <%= button_to "unlike", toggle_favorite_trip_path(@trip), method: :post %>
        <% else %>
          <%= button_to "like", toggle_favorite_trip_path(@trip), method: :post %>
        <% end %>
  </div>
</div>
