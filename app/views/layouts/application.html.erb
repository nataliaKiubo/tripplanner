<!DOCTYPE html>
<html>
  <head>
    <title>Tripplanner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <!-- app/views/layouts/application.html.erb -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js"></script>
  </head>

  <body>
  <%= render "shared/navbar" %>
<%= render "shared/flashes" %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>

    <%# Navbar Fixed on Bottom %>
    <% if user_signed_in? %>
        <nav class="navbar fixed-bottom bg-light">
        <div id= "icon-navbar-bottom" class="container-fluid">

          <%# Home  %>
          <% if user_signed_in? %>
            <li class="nav-item active">
              <a href="<%= root_path %>"><i class="fa-solid fa-house-chimney"></i></a>
            </li>
          <% end %>

          <%# User %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <a href="<%= user_path(current_user) %>"><i class="fa-solid fa-user"></i></a>
            </li>
          <% end %>

          <%# Favorites %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <a href="<%= user_favorites_path(current_user) %>"><i class="fa-solid fa-heart"></i></a>
            </li>
          <% end %>

          <%# Add New Trip %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <a href="<%= new_trip_path %>"><i class="fa-solid fa-circle-plus"></i></a>
            </li>
          <% end %>
        </div>
      <% end %>
    </nav>
  </body>
</html>

<% if user_signed_in? %>
  <a href="<%= user_path(current_user) %>"><i class="far fa-user pr-2" aria-hidden="true"></i></a>
  <% end %>
